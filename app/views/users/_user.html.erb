<li>
  <%= gravatar_for user, size: 50 %>
  
    <%= link_to user.name, user,  class: user.gender == 1 ? "text-danger" : ""  %>
  <% if current_user && current_user.admin? && !current_user?(user) %>
    | <%= link_to "削除", user, method: :delete,
                                  data: { confirm: "本当に削除しますがよろしいですか" } %>
  <% end %>
</li>